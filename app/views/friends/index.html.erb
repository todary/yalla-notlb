<p id="notice"><%= notice %></p>

<h1>Listing Friends</h1>

<table>
  <thead>
    <tr>
      <th>Friend name</th>
      <th colspan="3"></th>
      <th colspan="3"></th>
      <th>email</th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
       <!--  <td><%= friend.friend_id %></td> -->
        <td><%= friend.user.name if friend.user %></td>
        <td colspan="6"></td>
        <td><%= friend.user.email if friend.user %></td>
        <td colspan="3"></td>
        <td colspan="3"></td>
        <td><%= link_to 'unfriend', friend, method: :delete, data: { confirm: 'Are you sure?' } ,class:"btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path ,class:"btn btn-primary"%>
