<style>

.divcontainer{
  min-height:330px;
  margin:10px;
  background-color:#eee;
  border-radius:10px;
  overflow: hidden;
  padding:10px;
}
h3{
  border-bottom:1px solid #ccc ;
}
.order{
  background-color:#2b0d33;
  border-radius:2px;
   border-bottom:1px solid #ccc ;
   overflow:hidden;
   padding:5px;
   padding-left: 10px;
   margin:2px;
   margin-top:8px;
   box-shadow:3px 3px 10px #333;
   color:white;

}
  .order:hover
  {
    background-color:white;
    text-decoration:none;
    color:black;
  }
</style>
<% if notice %>
<div class="alert alert-success" id="notice"><%= notice %></div>
<% end %>
<div class="col-md-6">
  <%= link_to 'End & Out', '/users/sign_out', method: :delete,class:"btn btn-default btn-sm" %>
  <%= link_to 'Start Order', '/orders/new', method: :get ,class:"btn btn-default btn-sm" %>
</div>
<div class="col-md-6">
  <%= link_to 'Add Friend', '/friends/new', method: :get ,class:"btn btn-default btn-sm pull-right" %>
  <%= link_to 'Create Group', '/groups/new', method: :get ,class:"btn btn-default btn-sm pull-right" %>
</div>

  <div class="clearfix"></div>
  <div class="clearfix"></div>
  <div class="divcontainer col-md-6 table-bordered" >
    <h3><i class="fa fa-cart-plus" aria-hidden="true"></i>   latest orders</h3>

    <% @orders.each do |order| %>
      <%= link_to order do %>
        <div class="order">
          <h4>
          
            <i class="fa fa-paperclip" aria-hidden="true"></i>  <%= order.name %>
          </h4>
          <p>
            <i class="fa fa-home" aria-hidden="true"></i>  <%= order.resturant %>
          </p>
          <p>
            <i class="fa fa-clock-o" aria-hidden="true"></i>  <%= order.created_at %>
          </p>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- friend Activity -->
  <div class="divcontainer col-md-5 table-bordered">
    <h3><i class="fa fa-flash" aria-hidden="true"></i>    Friend Activity</h3>
        <% @notifications.each do |note| %>
        <% note = note.order(created_at: :desc).limit(5)%>
          <% note.each do |n| %>

          <div class="order">
            <h4>
              <i class="fa fa-bell" aria-hidden="true"></i><span style="color:red">
              <%= n.user.name %>
              </span>
                <%= n.content %>
            </h4>
            <p>
              <i class="fa fa-clock-o" aria-hidden="true"></i>  <%= n.created_at %>
           </p>
         </div>
            
          
      <% end %>
       <% end %>
  </div>
         
      


     
  </div>

  <div class="clearfix"></div>


